<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type">
    <meta content="text/html; charset=utf-8">
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <meta name="format-detection" content="email=no">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/xueba/css/style.css")">
    @Scripts.Render("~/bundles/jquery")
    <style type="text/css">
        .loading-indicator {
            height: 80px;
            width: 80px;
            background: url( '/content/images/loading.gif' );
            background-repeat: no-repeat;
            background-position: center center;
        }
        .loading-indicator-overlay {
            background-color: #FFFFFF;
            opacity: 0.6;
            filter: alpha(opacity = 60);
        }

        .easyDialog_wrapper {
            width: 180px;
            color: #fff;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            display: none;
            font-family: "Microsoft yahei", Arial;
        }

            .easyDialog_wrapper .easyDialog_content {
                -webkit-border-radius: 4px;
                -moz-border-radius: 4px;
                border-radius: 4px;
                background: #888;
                padding: 10px;
            }

    </style>
    <script type="text/javascript" src="@Url.Content("~/Scripts/easydialog.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.showLoading.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.cookie.js")"></script>
    <script type="text/javascript">
        /*质朴长存法*/
        function pad(num, n) {
            var len = num.toString().length;
            while (len < n) {
                num = "0" + num;
                len++;
            }
            return num;
        }
    </script>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
